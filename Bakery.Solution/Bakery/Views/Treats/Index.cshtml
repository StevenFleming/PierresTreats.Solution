@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Treat>;

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

<h1>Treats for @User.Identity.Name</h1>
<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Description}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>




